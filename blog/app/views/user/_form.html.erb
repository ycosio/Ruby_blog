<%= form_for(user) do |f|%>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :last_name %><br>
    <%= f.text_field :last_name %>
  </p>

  <p>
    <%= f.label :email %><br>
    <%= f.email_field :email %>
  </p>

  <p>
    <%= f.label :pass %><br>
    <%= f.password_field :pass %>
  </p>

  <p>
    <%= f.submit%><br>
  </p>
<% end %>

<%= link_to 'Back', controller: 'user', action: 'index' %>
